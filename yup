<body>
    <canvas id="lightBeams"></canvas>
    <a href="game.html" class="number">3:16</a>
    <div class="verse">
        For God so loved the world, that he gave his only begotten Son, that whosoever believeth in him should not perish, but have everlasting life.
    </div>
    <a href="https://youtu.be/PIpvIVLQ2Dk?si=tL9-moi6UsiCiAs-" target="_blank" class="cross"></a>

    <script>
        // Light beams animation
        const canvas = document.getElementById('lightBeams');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        const beams = [];
        class Beam {
            constructor() {
                this.width = Math.random() * 20 + 10;
                this.x = Math.random() * canvas.width;
                this.y = canvas.height;
                this.speed = Math.random() * 2 + 1;
                this.opacity = 0.5;
                this.flash = false;
                this.flashDuration = 10;
                this.flashCounter = 0;
            }
            update() {
                this.y -= this.speed;
                if (this.y <= 0) {
                    this.flash = true;
                    this.y = 0;
                }
                if (this.flash) {
                    this.flashCounter++;
                    if (this.flashCounter > this.flashDuration) {
                        this.y = canvas.height;
                        this.x = Math.random() * canvas.width;
                        this.flash = false;
                        this.flashCounter = 0;
                        this.opacity = 0.5;
                    }
                }
            }
            draw() {
                ctx.beginPath();
                ctx.moveTo(this.x, this.y);
                ctx.lineTo(this.x, this.y + 50);
                ctx.strokeStyle = `rgba(255, 255, 255, ${this.opacity})`;
                ctx.lineWidth = this.width;
                ctx.shadowBlur = 20;
                ctx.shadowColor = 'rgba(255, 255, 255, 0.8)';
                ctx.stroke();
                if (this.flash) {
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.width * 2, 0, Math.PI * 2);
                    ctx.fillStyle = `rgba(255, 255, 255, ${1 - this.flashCounter / this.flashDuration})`;
                    ctx.fill();
                }
            }
        }

        for (let i = 0; i < 5; i++) {
            beams.push(new Beam());
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            beams.forEach(beam => {
                beam.update();
                beam.draw();
            });
            if (Math.random() < 0.02) {
                beams.push(new Beam());
            }
            if (beams.length > 10) {
                beams.shift();
            }
            requestAnimationFrame(animate);
        }
        animate();
    </script>
</body>
</html>
